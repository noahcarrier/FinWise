generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int      @id @default(autoincrement())
  email      String
  password   String
  salt       String
  created_at DateTime @default(now()) @db.Timestamp(6)
  username   String   @unique
  rfidkey    String?  @unique
  lessons    lesson?
}

model lesson {
  lesson_id  Int             @id @default(autoincrement())
  title      String
  created_at DateTime        @default(now()) @db.Timestamp(6)
  user_id    users           @relation(fields: [lesson_id], references: [id])
  questions  lessonQuestion?
}

model lessonQuestion {
  question_id Int    @id @default(autoincrement())
  question    String
  answer      String
  attempt     Boolean @default(false)
  lesson_id   lesson @relation(fields: [question_id], references: [lesson_id])
}
